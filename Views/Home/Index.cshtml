        <!-- JavaScript Enhancements -->
        <script>



            function redirectTo(suitableFor, gender) {
                window.location.href = `/Property/FilteredProperties?suitableFor=${suitableFor}&gender=${gender}`;
            }


            // Add hover effects
            document.querySelectorAll('.hover-effect').forEach(card => {
                card.addEventListener('mouseover', () => {
                    card.classList.add('shadow-lg'); // Add larger shadow on hover
                });
                card.addEventListener('mouseout', () => {
                    card.classList.remove('shadow-lg'); // Remove shadow on hover out
                });
            });

            // Fade-in animation on load
            window.addEventListener('load', () => {
                document.querySelectorAll('.animate-fade-in').forEach(element => {
                    element.style.opacity = 0;
                    element.style.transition = 'opacity 1s';
                    setTimeout(() => {
                        element.style.opacity = 1;
                    }, 300);
                });
            });

            // Add bounce animation to buttons
            const bounceButton = document.querySelector('.animate-bounce');
            bounceButton.addEventListener('mouseover', () => {
                bounceButton.classList.add('animate');
                bounceButton.classList.add('animate__bounce');
            });
            bounceButton.addEventListener('mouseout', () => {
                bounceButton.classList.remove('animate');
                bounceButton.classList.remove('animate__bounce');
            });

            // Click to copy contact information
            document.querySelectorAll('.contact-item').forEach(item => {
                item.addEventListener('click', () => {
                    const text = item.querySelector('.phone-number, .email-address').innerText;
                    navigator.clipboard.writeText(text).then(() => {
                        alert(`Copied: ${text}`);
                    });
                });
            });</script>

