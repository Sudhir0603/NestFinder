@{
    ViewData["Title"] = "Search Properties";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <br />
    <br />

    <div class="container my-5">
        <h2 class="text-center mb-4">Search Properties</h2>
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Index", "Search", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label class="form-label">Search Locality</label>
                        <input type="text" class="form-control" name="Localities" placeholder="Enter locality or landmark">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Looking For</label>
                        <select class="form-control" name="LookingFor">
                            <option value="">Any</option>
                            <option value="Full House">Full House</option>
                            <option value="PG/Hostel">PG/Hostel</option>
                            <option value="Flatmates">Flatmates</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Max Rent (₹)</label>
                        <input type="number" class="form-control" name="RentRange" placeholder="Enter max rent">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Furnishing Status</label>
                        <select class="form-control" name="FurnishingStatus">
                            <option value="">Any</option>
                            <option value="Fully Furnished">Fully Furnished</option>
                            <option value="Semi Furnished">Semi Furnished</option>
                            <option value="Unfurnished">Unfurnished</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Show Only Properties with Images</label>
                        <input type="checkbox" name="ImageFilter" value="true">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
