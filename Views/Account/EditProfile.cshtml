@model NestFinder.Models.ApplicationUser

@{
    ViewBag.Title = "Edit Profile";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Edit Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="profile-card shadow-lg p-4 rounded">
        <form method="post" action="@Url.Action("EditProfile", "Account")">
            @Html.AntiForgeryToken()

            <!-- Full Name -->
            <div class="mb-3">
                @Html.LabelFor(model => model.FullName, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "Enter Full Name" })
            </div>

            <!-- Email -->
            <div class="mb-3">
                @Html.LabelFor(model => model.Email, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter Email", disabled = "disabled" })
            </div>

            <!-- Phone -->
            <div class="mb-3">
                @Html.LabelFor(model => model.PhoneNumber, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Enter Phone Number" })
            </div>

            <!-- City -->
            <div class="mb-3">
                @Html.LabelFor(model => model.City, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Enter City" })
            </div>

            <!-- State -->
            <div class="mb-3">
                @Html.LabelFor(model => model.State, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.State, new { @class = "form-control", placeholder = "Enter State" })
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100">Save Changes</button>
        </form>
    </div>
</div>

<!-- ✅ Styling for Profile Page -->
<style>
    .profile-card {
        max-width: 500px;
        margin: auto;
        background: #fff;
        border-radius: 10px;
        padding: 20px;
    }

        .profile-card .btn {
            width: 100%;
        }
</style>
