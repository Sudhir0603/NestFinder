<div class="login-container">
    <div class="login-card">
        <h2 class="text-center">@ViewBag.Title</h2>
        <p class="text-center text-muted">Enter your email to verify your identity</p>
        <hr />

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-dark">Verify</button>
        }

        <p class="text-center mt-2 links">
            @Html.ActionLink("Back to Login", "Login", "Account")
        </p>
    </div>
</div>
