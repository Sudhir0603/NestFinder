@model NestFinder.Models.Property

@{
    ViewBag.Title = "Admin Property Details";
}

<div class="container mt-4">
    <div class="card property-card p-3">
        <h2 class="text-center mb-4 text-primary"><i class="fa-solid fa-house"></i> @Model.Title</h2>

        <div class="row">
            <!-- Left: Image Carousel -->
            <div class="col-md-6">
                <div id="carousel-@Model.Id" class="carousel slide rounded shadow-sm" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (!string.IsNullOrEmpty(Model.ImageUrls))
                        {
                            var imageArray = Model.ImageUrls.Split(';');
                            for (int i = 0; i < imageArray.Length; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@imageArray[i]" class="d-block w-100 rounded" style="height: 400px; object-fit: cover;">
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Right: Property Details -->
            <div class="col-md-6">
                <div class="p-3">
                    <h4 class="property-header"><i class="fa-solid fa-info-circle text-primary"></i> Property Details</h4>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Location:</strong> @Model.City, @Model.State</p>
                    <p><strong>Price:</strong> ₹@String.Format("{0:N0}", Model.Price)</p>

                    <!-- Approval Status -->
                    <h5 class="mt-3">
                        <strong>Approval Status:</strong>
                        <span class="badge bg-@(Model.IsApproved ? "success" : "warning")">
                            @(Model.IsApproved ? "Approved" : "Pending")
                        </span>
                    </h5>

                    <!-- Approval Buttons -->
                    @if (!Model.IsApproved)
                    {
                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-success" onclick="updateApprovalStatus(@Model.Id, true)"><i class="fa-solid fa-check"></i> Approve</button>
                            <button class="btn btn-danger" onclick="updateApprovalStatus(@Model.Id, false)"><i class="fa-solid fa-times"></i> Reject</button>
                        </div>
                    }

                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary mt-3"><i class="fa-solid fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Approval -->
<script>
    function updateApprovalStatus(propertyId, isApproved) {
        fetch('/Admin/UpdateApprovalStatus', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ propertyId: propertyId, isApproved: isApproved })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert("Error: " + data.message);
            }
        })
        .catch(error => console.error("AJAX Error:", error));
    }
</script>
