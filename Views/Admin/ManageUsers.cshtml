@model IEnumerable<NestFinder.Models.ApplicationUser>

<h2 class="text-center mb-4 text-primary">Manage Users</h2>

<div class="table-container">
    <table class="table table-striped table-hover shadow-lg">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge @(user.IsBlocked ? "badge-danger" : "badge-success")">
                            @(user.IsBlocked ? "Blocked" : "Active")
                        </span>
                    </td>
                    <td class="text-center">
                        @if (user.IsBlocked)
                        {
                            <a href="@Url.Action("UnblockUser", "Admin", new { id = user.Id })" class="btn btn-success btn-sm">
                                <i class="fa fa-unlock"></i> Unblock
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("BlockUser", "Admin", new { id = user.Id })" class="btn btn-warning btn-sm">
                                <i class="fa fa-lock"></i> Block
                            </a>
                        }
                        <button class="btn btn-danger btn-sm delete-user" data-url="@Url.Action("DeleteUser", "Admin", new { id = user.Id })">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Custom Styling -->
<style>
    body {
        background: #f4f4f4;
        font-family: 'Poppins', sans-serif;
    }

    .table-container {
        max-width: 900px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
    }

    table {
        border-radius: 10px;
        overflow: hidden;
    }

    .table th, .table td {
        padding: 12px 15px;
        text-align: center;
    }

    .table tbody tr {
        transition: all 0.3s ease-in-out;
    }

        .table tbody tr:hover {
            background: #f1f1f1;
            transform: scale(1.02);
        }

    .btn {
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    .btn-warning:hover {
        background: #ffca28;
        color: black;
    }

    .btn-success:hover {
        background: #28a745;
    }

    .badge {
        font-size: 14px;
        padding: 5px 10px;
        border-radius: 20px;
    }

    .delete-user {
        cursor: pointer;
    }
</style>

<!-- Bootstrap & jQuery -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- SweetAlert for Confirmations -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $(".delete-user").click(function () {
            var url = $(this).data("url");

            Swal.fire({
                title: "Are you sure?",
                text: "This user will be permanently deleted!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            });
        });
    });
</script>
