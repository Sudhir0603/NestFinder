@model NestFinder.Models.Property

@{
    ViewBag.Title = "Delete Property";
}

<div class="container mt-5">
    <h2 class="text-danger text-center">Are you sure you want to delete this property?</h2>

    <div class="card shadow-lg border-0 rounded-4 mt-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p>@Model.Description</p>

            <div class="mb-3">
                <strong>Location:</strong> @Model.Address, @Model.City, @Model.State
            </div>

            <div class="mb-3">
                <strong>Price:</strong> ₹@Model.Price
            </div>

            <div class="mb-3">
                <strong>Existing Images:</strong>
                <div>
                    @foreach (var img in Model.ImageUrls.Split(';'))
                    {
                        <img src="@img" alt="Property Image" class="img-thumbnail" width="100" />
                    }
                </div>
            </div>

            @using (Html.BeginForm("Delete", "Property", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <button type="submit" class="btn btn-danger">Delete Property</button>
                <a href="@Url.Action("MyProperties", "Property")" class="btn btn-secondary">Cancel</a>
            }
        </div>
    </div>
</div>
